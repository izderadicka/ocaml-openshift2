#!/usr/bin/env bash

# Adapted from openshift-go-cart.

source $OPENSHIFT_CARTRIDGE_SDK_BASH

logfile=${OPENSHIFT_LOG_DIR}/ocaml.log

function run_hook() {
	local path=${OPENSHIFT_REPO_DIR}/.openshift/action_hooks/$1
	if [ -f $path -a -x $path ]; then
		"$path"
	else
		return 0
	fi
}

function status() {
	run_hook status
}

function start() {
	run_hook start
}

function stop() {
	run_hook stop
}

function restart() {
    stop
    start
}

function tidy() {
	client_message "Deleting ocaml log"
	rm -rf $logfile
}

function build() {
	${OPENSHIFT_OCAML_DIR}/bin/compile
}

# Ensure arguments.
if ! [ $# -eq 1 ]; then
    echo "Usage: $0 [build|start|restart|stop|status|tidy]"
    exit 1
fi

# Handle commands.
case "$1" in
	build)            build          ;;
    start)            start          ;;
    restart)          restart        ;;
    stop)             stop           ;;
    status)           status         ;;
    tidy)             tidy           ;;
    *)                exit 0         ;;
esac

